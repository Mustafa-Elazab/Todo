<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/grey_color"
       android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        >
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:background="@drawable/red_dot_shape"
              android:layout_gravity="end"
              android:layout_marginEnd="8dp"
              android:layout_marginTop="8dp"
              android:id="@+id/rv_v_dot"
              />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/rv_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/rv_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description "
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/rv_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8 Aug 2022"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:textStyle="bold"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>